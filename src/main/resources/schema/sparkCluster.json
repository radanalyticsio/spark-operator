{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A Spark cluster configuration",
  "type": "object",
  "javaInterfaces": ["io.radanalytics.operator.common.EntityInfo"],
  "properties": {
    "name": {
      "type": "string"
    },
    "master": {
      "$ref": "#/definitions/RCSpec"
    },
    "worker": {
      "$ref": "#/definitions/RCSpec"
    },
    "customImage": {
      "type": "string",
      "default": "jkremser/openshift-spark:2.3-latest"
    },
    "sparkConfigurationMap": {
      "type": "string"
    },
    "env": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/EnvVar"
      }
    },
    "sparkConfiguration": { "$ref": "#/properties/env" },
    "downloadData": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": { "type": "string" },
          "to": { "type": "string" }
        },
        "required": ["url", "to"]
      }
    }
  },
  "required": [ ],
  "definitions": {
    "RCSpec": {
      "type": "object",
      "properties": {
        "replicas": {
          "type": "integer",
          "default": 1,
          "minimum": 0
        },
        "memory": {
          "type": "string"
        },
        "cpu": {
          "type": "string"
        }
      }
    },
    "EnvVar": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "value": { "type": "string" }
      },
      "required": ["name", "value"]
    }
  }
}